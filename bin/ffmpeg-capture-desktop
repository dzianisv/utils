#!/bin/sh -e
RESOLUTION=$(xdpyinfo | grep dimensions | sed -r 's/^[^0-9]*([0-9]+x[0-9]+).*$/\1/')

notify() {
    notify-send "$*"
    echo "$*"
}

notify "Sleep 5 seconds before start..."
sleep 5s
ffmpeg -video_size "$RESOLUTION" -framerate 25 -f x11grab -i :0.0 -f pulse -ac 2 -i default -c:v h264 "desktop-capture-$(date +%s).mp4"