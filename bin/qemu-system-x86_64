#!/bin/bash

if ! command -v qemu-system-x86_64 2> /dev/null; then
  brew install qemu
fi

ISO=${1:?ISO disk is not set}
DISK=/dev/disk3

for d in ${DISK}*; do
  diskutil unmount "$d"
done

qemu-system-x86_64 \
  -m 8096 \
  -usb \
  -device usb-tablet \
  -monitor stdio \
  -device intel-hda \
  -machine type=q35,accel=hvf \
  -cpu Haswell \
  -cdrom "$ISO" \
  -hda "$DISK" \
